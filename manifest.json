{
  "manifest_version": 2,
  "name": "Colorful Motivation",
  "version": "0.1",
  "author": "Josh Spicer",
  "homepage_url": "http://joshspicer.com/",
 "description": "Replaces the new tab page with colorful motivation.",
  "chrome_url_overrides" : {
   "newtab": "index.html"
 },
 "permissions": [
         "storage"
       ],
 "background": {
      "scripts": ["background.js"],
      "persistent": false
  },
  "icons": {"16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png"},
  "options_page": "options.html"
}
